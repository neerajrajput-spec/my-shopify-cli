{% doc %}
  @prompt
    Create a reusable section for a "Dermalogica Learning Hub" welcome page with the following features:
    - A main heading that uses rich text input for customization
    - A paragraph description that uses text input for customization  
    - Clean, centered layout with proper spacing
    - Professional styling suitable for a learning/training platform
    - The section should be reusable across different pages
    - Include settings for both English and Hindi text support
    - Make it responsive for mobile and desktop
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-learning-hub-welcome-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    width: 100%;
  }

  .ai-learning-hub-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-learning-hub-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    line-height: 1.2;
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px;
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-style: {{ settings.type_header_font.style }};
    font-weight: {{ settings.type_header_font.weight }};
  }

  .ai-learning-hub-heading-{{ ai_gen_id }} * {
    color: inherit;
    font-size: inherit;
    font-weight: inherit;
    line-height: inherit;
    margin: 0;
  }

  .ai-learning-hub-description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.6;
    margin: 0;
    max-width: {{ block.settings.description_max_width }}px;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-style: {{ settings.type_body_font.style }};
    font-weight: {{ settings.type_body_font.weight }};
  }

  {% if block.settings.text_alignment == 'center' %}
    .ai-learning-hub-description-{{ ai_gen_id }} {
      margin-left: auto;
      margin-right: auto;
    }
  {% elsif block.settings.text_alignment == 'right' %}
    .ai-learning-hub-description-{{ ai_gen_id }} {
      margin-left: auto;
    }
  {% endif %}

  .ai-learning-hub-divider-{{ ai_gen_id }} {
    width: {{ block.settings.divider_width }}px;
    height: {{ block.settings.divider_thickness }}px;
    background-color: {{ block.settings.divider_color }};
    margin: {{ block.settings.divider_margin_top }}px auto {{ block.settings.divider_margin_bottom }}px;
    border: none;
    border-radius: {{ block.settings.divider_thickness | divided_by: 2 }}px;
  }

  {% if block.settings.text_alignment == 'left' %}
    .ai-learning-hub-divider-{{ ai_gen_id }} {
      margin-left: 0;
    }
  {% elsif block.settings.text_alignment == 'right' %}
    .ai-learning-hub-divider-{{ ai_gen_id }} {
      margin-right: 0;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-learning-hub-welcome-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px 0 {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }

    .ai-learning-hub-container-{{ ai_gen_id }} {
      padding: 0 16px;
      text-align: {{ block.settings.mobile_text_alignment }};
    }

    .ai-learning-hub-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
      margin-bottom: {{ block.settings.heading_margin_bottom | times: 0.8 }}px;
    }

    .ai-learning-hub-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
      max-width: 100%;
    }

    {% if block.settings.mobile_text_alignment == 'center' %}
      .ai-learning-hub-description-{{ ai_gen_id }} {
        margin-left: auto;
        margin-right: auto;
      }
      .ai-learning-hub-divider-{{ ai_gen_id }} {
        margin-left: auto;
        margin-right: auto;
      }
    {% elsif block.settings.mobile_text_alignment == 'right' %}
      .ai-learning-hub-description-{{ ai_gen_id }} {
        margin-left: auto;
        margin-right: 0;
      }
      .ai-learning-hub-divider-{{ ai_gen_id }} {
        margin-left: auto;
        margin-right: 0;
      }
    {% else %}
      .ai-learning-hub-description-{{ ai_gen_id }} {
        margin-left: 0;
        margin-right: auto;
      }
      .ai-learning-hub-divider-{{ ai_gen_id }} {
        margin-left: 0;
        margin-right: auto;
      }
    {% endif %}

    .ai-learning-hub-divider-{{ ai_gen_id }} {
      width: {{ block.settings.divider_width | times: 0.8 }}px;
      margin-top: {{ block.settings.divider_margin_top | times: 0.8 }}px;
      margin-bottom: {{ block.settings.divider_margin_bottom | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-learning-hub-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-learning-hub-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<div class="ai-learning-hub-welcome-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-learning-hub-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-learning-hub-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h1>
    {% endif %}

    {% if block.settings.show_divider %}
      <div class="ai-learning-hub-divider-{{ ai_gen_id }}"></div>
    {% endif %}

    {% if block.settings.description != blank %}
      <p class="ai-learning-hub-description-{{ ai_gen_id }}">
        {{ block.settings.description }}
      </p>
    {% endif %}
  </div>
</div>

