  "name": "Retro banner",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Limited Edition"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Vintage Vibes"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Step back in time with our classic collection"
    },
    {
      "type": "text",
      "id": "button_text",
