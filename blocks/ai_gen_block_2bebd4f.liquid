{% doc %}
  @prompt
    Create a retro-styled banner section with vintage aesthetics including classic typography, warm color tones, and nostalgic design elements that can be customized for different pages
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-retro-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    background-image: 
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent {{ block.settings.stripe_spacing }}px,
        {{ block.settings.stripe_color }} {{ block.settings.stripe_spacing }}px,
        {{ block.settings.stripe_color }} calc({{ block.settings.stripe_spacing }}px + 2px)
      );
    overflow: hidden;
  }

  .ai-retro-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle at 30% 50%,
      {{ block.settings.overlay_color_1 }} 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 70% 50%,
      {{ block.settings.overlay_color_2 }} 0%,
      transparent 50%
    );
    opacity: {{ block.settings.overlay_opacity }};
    pointer-events: none;
  }

  .ai-retro-banner-container-{{ ai_gen_id }} {
    position: relative;
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    text-align: {{ block.settings.text_alignment }};
    z-index: 1;
  }

  .ai-retro-banner-badge-{{ ai_gen_id }} {
    display: inline-block;
    padding: 8px 20px;
    margin-bottom: 20px;
    background-color: {{ block.settings.badge_bg_color }};
    color: {{ block.settings.badge_text_color }};
    font-size: 12px;
    font-weight: 700;
    letter-spacing: 2px;
    text-transform: uppercase;
    border: 2px solid {{ block.settings.badge_border_color }};
    border-radius: 0;
    box-shadow: 4px 4px 0 {{ block.settings.badge_shadow_color }};
  }

  .ai-retro-banner-heading-{{ ai_gen_id }} {
    margin: 0 0 20px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 900;
    line-height: 1.1;
    text-transform: uppercase;
    letter-spacing: -1px;
    text-shadow: 
      3px 3px 0 {{ block.settings.heading_shadow_color }},
      6px 6px 0 {{ block.settings.heading_shadow_color_2 }};
  }

  .ai-retro-banner-subheading-{{ ai_gen_id }} {
    margin: 0 0 30px;
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    font-weight: 400;
    line-height: 1.5;
    font-style: italic;
  }

  .ai-retro-banner-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 16px 40px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 700;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    border: 3px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    box-shadow: 5px 5px 0 {{ block.settings.button_shadow_color }};
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    cursor: pointer;
  }

  .ai-retro-banner-button-{{ ai_gen_id }}:hover {
    transform: translate(2px, 2px);
    box-shadow: 3px 3px 0 {{ block.settings.button_shadow_color }};
  }

  .ai-retro-banner-decorative-{{ ai_gen_id }} {
    position: absolute;
    pointer-events: none;
  }

  .ai-retro-banner-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    fill: {{ block.settings.star_color }};
  }

  .ai-retro-banner-star-1-{{ ai_gen_id }} {
    top: 10%;
    left: 10%;
  }

  .ai-retro-banner-star-2-{{ ai_gen_id }} {
    top: 20%;
    right: 15%;
  }

  .ai-retro-banner-star-3-{{ ai_gen_id }} {
    bottom: 15%;
    left: 15%;
  }

  .ai-retro-banner-star-4-{{ ai_gen_id }} {
    bottom: 10%;
    right: 10%;
  }

  @media screen and (max-width: 749px) {
    .ai-retro-banner-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.6 }}px 16px {{ block.settings.padding_bottom | times: 0.6 }}px;
    }

    .ai-retro-banner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
      text-shadow: 
        2px 2px 0 {{ block.settings.heading_shadow_color }},
        4px 4px 0 {{ block.settings.heading_shadow_color_2 }};
    }

    .ai-retro-banner-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-retro-banner-button-{{ ai_gen_id }} {
      padding: 14px 32px;
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
    }

    .ai-retro-banner-star-{{ ai_gen_id }} {
      width: {{ block.settings.star_size | times: 0.7 }}px;
      height: {{ block.settings.star_size | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-retro-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-retro-banner-overlay-{{ ai_gen_id }}"></div>
  
  {% if block.settings.show_stars %}
    <svg class="ai-retro-banner-decorative-{{ ai_gen_id }} ai-retro-banner-star-1-{{ ai_gen_id }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path class="ai-retro-banner-star-{{ ai_gen_id }}" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
    </svg>
    <svg class="ai-retro-banner-decorative-{{ ai_gen_id }} ai-retro-banner-star-2-{{ ai_gen_id }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path class="ai-retro-banner-star-{{ ai_gen_id }}" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
    </svg>
    <svg class="ai-retro-banner-decorative-{{ ai_gen_id }} ai-retro-banner-star-3-{{ ai_gen_id }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path class="ai-retro-banner-star-{{ ai_gen_id }}" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
    </svg>
    <svg class="ai-retro-banner-decorative-{{ ai_gen_id }} ai-retro-banner-star-4-{{ ai_gen_id }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path class="ai-retro-banner-star-{{ ai_gen_id }}" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
    </svg>
  {% endif %}

  <div class="ai-retro-banner-container-{{ ai_gen_id }}">
    {% if block.settings.badge_text != blank %}
      <div class="ai-retro-banner-badge-{{ ai_gen_id }}">
        {{ block.settings.badge_text }}
      </div>
    {% endif %}

    {% if block.settings.heading != blank %}
      <h2 class="ai-retro-banner-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <p class="ai-retro-banner-subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </p>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <a 
        href="{{ block.settings.button_link }}" 
        class="ai-retro-banner-button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
